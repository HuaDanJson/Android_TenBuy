<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.tenbuy.ui.login.FindActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF4081">
        <ImageView
            android:id="@+id/image_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <View
            android:layout_width="120dp"
            android:layout_height="0.1dp"
            android:background="#999"
            android:layout_gravity="center_vertical"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="十元包邮找回密码"/>
        <View
            android:layout_width="120dp"
            android:layout_height="0.1dp"
            android:background="#999"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/edittext_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="21dp"
        android:inputType="number"
        android:padding="12dp"

        android:hint="输入手机号"
        android:background="@drawable/loginname"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/edittext_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="21dp"
        android:padding="12dp"
        android:hint="请输入验证码"
        android:textColor="#fff"
        android:background="@drawable/loginname"/>
        <TextView
            android:id="@+id/text_getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:background="@drawable/code"
            android:textColor="#f00"
            android:textSize="12sp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"

            android:layout_alignBaseline="@+id/edittext_code"
            android:layout_alignBottom="@+id/edittext_code"
            android:layout_alignRight="@+id/edittext_code"
            android:layout_alignEnd="@+id/edittext_code"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp" />
    </RelativeLayout>
    <EditText
        android:id="@+id/edittext_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="21dp"
        android:padding="12dp"
        android:hint="设置密码 (6-20位字符)"
        android:background="@drawable/loginname"/>
    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="21dp"
        android:padding="10dp"
        android:text="提交"
        android:textColor="#fff"
        android:background="@drawable/loginbutton"/>

</LinearLayout>
