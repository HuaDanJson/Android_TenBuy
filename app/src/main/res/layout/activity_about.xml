<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#FF3366"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/about_back"
            android:background="@drawable/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <TextView
            android:textSize="20sp"
            android:textColor="#FFFF"
            android:id="@+id/about_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于十元包邮"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/about_bg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="      十元包邮（syby8.com）每天更新千余款商品，低至十元，全场包邮。每1款商品都经过人工审核，由编辑精心挑选而来，省钱但品质也好。精选商品砍到底价、购物省钱达人们选择的APP。女装、母婴、化妆品、鞋包、数码、配饰、居家等，应有尽有。手机购物省钱APP，十元包邮！"
                android:lineSpacingMultiplier="1.5" />
            <ImageView
                android:background="@drawable/about_code"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>