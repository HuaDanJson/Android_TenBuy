<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/gridview_image"
        android:layout_width="165dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/gridview_textone"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="hahahahahah"/>
    <LinearLayout
    android:layout_width="165dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/gridview_texttow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ads"/>
    <TextView
        android:id="@+id/gridview_textthr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="asdf"/>
    <TextView
        android:id="@+id/gridview_textfor"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="sdfsfd"
        android:gravity="end"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/gridview_textfive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adsss"/>

        <TextView
            android:id="@+id/gridview_textsix"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="sdfsfd"
            android:gravity="end"/>
    </LinearLayout>
</LinearLayout>
