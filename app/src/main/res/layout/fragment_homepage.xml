<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="#FF4081">
      <ImageView
          android:id="@+id/imageview_search"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@mipmap/search"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="十元包邮"
             android:textColor="#fff"
             android:textSize="18sp"
             android:layout_centerVertical="true"
             android:layout_centerHorizontal="true" />
      <ImageView
          android:id="@+id/imageview_signin"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@mipmap/signin"
          android:layout_alignParentRight="true"/>
      </RelativeLayout>



   <com.handmark.pulltorefresh.library.PullToRefreshScrollView
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="wrap_content">



      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="match_parent">
   <android.support.v4.view.ViewPager
       android:id="@+id/viewpager_carouse"
       android:layout_width="match_parent"
       android:layout_height="160dp"
       />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="90dp"
          android:orientation="horizontal">
         <LinearLayout
             android:id="@+id/linear_frock"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:orientation="vertical"
             android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_m_nvzhuang"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="女装"
                android:layout_marginTop="10dp"
                android:gravity="center"/>
         </LinearLayout>
         <LinearLayout
             android:id="@+id/linear_living"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:orientation="vertical"
             android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_m_jujia"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="居家"
                android:layout_marginTop="10dp"
                android:gravity="center"/>
         </LinearLayout>
         <LinearLayout
             android:id="@+id/linear_mom"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:orientation="vertical"
             android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_m_muying"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="母婴"
                android:layout_marginTop="10dp"
                android:gravity="center"/>
         </LinearLayout>
         <LinearLayout
             android:id="@+id/linear_all"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:orientation="vertical"
             android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_m_all"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更多"
                android:layout_marginTop="10dp"
                android:gravity="center"/>
         </LinearLayout>
      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="4dp"
          android:background="#F6F6F6"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="250dp"
          android:orientation="horizontal">
         <LinearLayout
             android:layout_width="0dp"
             android:layout_weight="2"
             android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_today"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_m_jujia"/>
         </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_height="match_parent">
           <LinearLayout
               android:layout_weight="1"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
              <ImageView
              android:id="@+id/image_phone"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:src="@mipmap/ic_m_jujia"/>
              <ImageView
                  android:id="@+id/image_beauty"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:src="@mipmap/ic_m_jujia"/>
           </LinearLayout>
           <LinearLayout
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
              <ImageView
                  android:id="@+id/image_food"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:src="@mipmap/ic_m_jujia"/>
              <ImageView
                  android:id="@+id/image_last"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:src="@mipmap/ic_m_jujia"/>
           </LinearLayout>
        </LinearLayout>
      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="3dp"
          android:background="#F6F6F6"/>
      <GridView
          android:id="@+id/gridview_content"
          android:layout_width="match_parent"
          android:layout_height="5350dp"
          android:numColumns="2"
          android:verticalSpacing="10dp"
          android:horizontalSpacing="10dp"
          >
      </GridView>
      </LinearLayout>

   </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>