<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="#FF3366"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textSize="20sp"
            android:textColor="#FFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择您的身份" />
        <TextView
            android:textSize="15sp"
            android:textColor="#FFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为您私人订制更合适的商品" />
        </LinearLayout>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/app_id_arrow" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/id_girl_nor_bg"
                android:id="@+id/image_girl"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/girlbutton"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:text="美女"
                android:layout_below="@+id/image_girl"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView2" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/id_man_nor_bg"
                android:id="@+id/image_nan"
                android:layout_below="@+id/textView2"
                android:layout_toLeftOf="@+id/image_girl"
                android:layout_toStartOf="@+id/image_girl"
                android:layout_marginTop="28dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/girlbutton"
                android:text="帅哥"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/image_nan"
                android:layout_alignLeft="@+id/image_nan"
                android:layout_alignStart="@+id/image_nan"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:id="@+id/textView3" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/id_woman_nor_bg"
                android:id="@+id/image_woman"
                android:layout_above="@+id/textView3"
                android:layout_toRightOf="@+id/image_girl"
                android:layout_toEndOf="@+id/image_girl" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/girlbutton"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="辣妈"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignRight="@+id/image_woman"
                android:layout_alignEnd="@+id/image_woman"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp" />
        </RelativeLayout>
        <Button
            android:textSize="15sp"
            android:textColor="#FFFF"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_submit"
            android:background="#FF3366"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="确定" />
    </LinearLayout>