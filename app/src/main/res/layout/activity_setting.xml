<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/colorGrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:orientation="horizontal"
        android:background="#FF3366"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/setting_back"
            android:background="@drawable/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <TextView
            android:textSize="20sp"
            android:textColor="#FFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统设置"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="#FFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/setting_sweep"
                    android:paddingLeft="25dp"
                    android:clickable="true"
                    android:background="@drawable/onclick"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/setting_sweep_image"
                        android:background="@drawable/usericon_clear"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true" />
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清除缓存"
                        android:layout_toRightOf="@id/setting_sweep_image"
                        android:layout_centerVertical="true" />
                    <TextView
                        android:id="@+id/textview_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10k"
                        android:visibility="invisible"
                        android:layout_alignBottom="@+id/imageView"
                        android:layout_toLeftOf="@+id/imageView"
                        android:layout_toStartOf="@+id/imageView"
                        android:layout_marginRight="15dp"
                        android:layout_marginEnd="17dp" />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/btn_right_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/imageView" />
                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#999"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>
                <RelativeLayout
                    android:id="@+id/Setting_update"
                    android:paddingLeft="25dp"
                    android:clickable="true"
                    android:background="@drawable/onclick"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/Setting_update_image"
                        android:background="@drawable/usericon_update"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true" />
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检查更新"
                        android:layout_toRightOf="@+id/Setting_update_image"
                        android:layout_centerVertical="true" />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/btn_right_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#999"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>
                <RelativeLayout
                    android:id="@+id/setting_aboutus"
                    android:paddingLeft="25dp"
                    android:clickable="true"
                    android:background="@drawable/onclick"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/setting_aboutus_image"
                        android:background="@drawable/usericon_aboutus"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true" />
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关于十元包邮"
                        android:layout_toRightOf="@id/setting_aboutus_image"
                        android:layout_centerVertical="true" />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/btn_right_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#999"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>